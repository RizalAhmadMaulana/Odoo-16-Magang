<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_proker" model="ir.actions.act_window">
            <field name="name">Program Kerja DPM</field>
            <field name="res_model">proker.dpm</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smilling_face">
                    Tambahkan Proker Dalam DPM FIK
                </p>
            </field>
        </record>

        <record id="view_proker_tree" model="ir.ui.view">
            <field name="name">Program Kerja DPM</field>
            <field name="model">proker.dpm</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="proker"/>
                    <field name="komisi_id"/>
                </tree>
            </field>
        </record>

        <record id="view_proker_form" model="ir.ui.view">
            <field name="name">Program Kerja DPM</field>
            <field name="model">proker.dpm</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="proker"/>
                            <field name="komisi_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>

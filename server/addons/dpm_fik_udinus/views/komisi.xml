<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_komisi" model="ir.actions.act_window">
            <field name="name">Daftar Komisi</field>
            <field name="res_model">komisi.dpm</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smilling_face">
                    Tambahkan Komisi Dalam DPM FIK
                </p>
            </field>
        </record>

        <record id="view_komisi_tree" model="ir.ui.view">
            <field name="name">Daftar Komisi</field>
            <field name="model">komisi.dpm</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="komisi"/>
                </tree>
            </field>
        </record>

        <record id="view_komisi_form" model="ir.ui.view">
            <field name="name">Daftar Komisi</field>
            <field name="model">komisi.dpm</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="komisi"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>

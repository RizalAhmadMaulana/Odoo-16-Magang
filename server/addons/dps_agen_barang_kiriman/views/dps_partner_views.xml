<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="dps_partner_form_view" model="ir.ui.view">
            <field name="name">dps.partner.form</field>
            <field name="model">dps.partner</field>
            <field name="arch" type="xml">
                <form string="Partner Agen Barkir">
                    <header>
                        <button name="action_view_orders" type="object" class="oe_highlight" string="Lihat Order" icon="fa-truck"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="kode_partner" readonly="1"/>
                                <field name="agen_id" options="{'no_open': True, 'no_create': True}"/>
                            </group>
                            <group>
                                <field name="nomor_telepon" widget="phone"/>
                                <field name="email" widget="email"/>
                            </group>
                        </group>
                        <group string="Alamat">
                            <field name="alamat" widget="text"/>
                            <field name="kota"/>
                            <field name="provinsi"/>
                            <field name="negara"/>
                        </group>
                        <notebook>
                            <page string="Pricelist">
                                <field name="pricelist_ids"> <tree string="Pricelists untuk Partner Ini">
                                        <field name="name"/>
                                        <field name="agen_id"/> <field name="date_start"/>
                                        <field name="date_end"/>
                                    </tree>
                                    </field>
                                <button name="%(dps_pricelist_action)d"
                                    string="Buat Pricelist Baru"
                                    type="action"
                                    class="oe_highlight"
                                    context="{'default_partner_id': active_id, 'default_agen_id': agen_id}"
                                />
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <!--<field name="activity_ids"/>-->
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="dps_partner_tree_view" model="ir.ui.view">
            <field name="name">dps.partner.tree</field>
            <field name="model">dps.partner</field>
            <field name="arch" type="xml">
                <tree string="Daftar Partner">
                    <field name="name"/>
                    <field name="kode_partner"/>
                    <field name="agen_id"/>
                    <field name="nomor_telepon"/>
                    <field name="order_count" decoration-info="order_count > 0"/>
                </tree>
            </field>
        </record>

        <record id="dps_partner_action" model="ir.actions.act_window">
            <field name="name">Partner</field>
            <field name="res_model">dps.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Buat Partner baru Anda!
                </p>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="invoice_form_inherit_dps_v4" model="ir.ui.view">
            <field name="name">account.move.form.inherit.dps.v4</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='invoice_origin']" position="after">
                    <field name="dps_order_id" readonly="1"/>
                    <field name="dps_shipping_cost" invisible="1"/> 
                    <field name="amount_total_dps" invisible="1"/> 
                </xpath>
                
                <xpath expr="//group[@class='oe_subtotal_footer oe_right']" position="replace">
                    <group class="oe_subtotal_footer oe_right">
                        
                        <field name="amount_untaxed" widget="monetary" string="Subtotal" options="{'currency_field': 'currency_id'}"/>
                        <field name="amount_tax" widget="monetary" string="Pajak" options="{'currency_field': 'currency_id'}"/>
                        <field name="dps_shipping_cost" widget="monetary" string="Biaya Pengiriman" options="{'currency_field': 'currency_id'}"/>
                        <field name="amount_total_dps" class="oe_subtotal_footer_separator" widget="monetary" string="Total Harga" options="{'currency_field': 'currency_id'}"/>
                    
                    </group>
                </xpath>

                <xpath expr="//group[@id='header_right_group']" position="after">
                    <field name="tax_totals" invisible="1"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
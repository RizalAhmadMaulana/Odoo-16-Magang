<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="estate_property_tree_view" model="ir.ui.view">
            <field name="name">estate.property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml"> 
                <tree>
                    <field name="name" />
                    <field name="type_id" />
                    <field name="postcode" />
                    <field name="data_availability" />
                    <field name="expected_price" />
                    <field name="best_offer" />
                    <field name="selling_price" />
                </tree>
            </field>
        </record>
        <record id="estate_property_form_view" model="ir.ui.view">
            <field name="name">estate.property.view</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="tag_ids" widget="many2many_tags" />
                            <group>
                                <field name="type_id" />
                                <field name="postcode" />
                                <field name="data_availability" />
                            </group>
                            <group>
                                <field name="expected_price" />
                                <field name="best_offer" />
                                <field name="selling_price" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description" />
                                    <field name="bedrooms" />
                                    <field name="living_area" />
                                    <field name="facades" />
                                    <field name="garage" />
                                    <field name="garden" />
                                    <field name="garden_area" />
                                    <field name="garden_orientation" />
                                    <field name="total_area" />
                                </group>
                            </page>
                            <page string="offers">
                                <field name="offer_ids">
                                    <tree editable="bottom">
                                        <field name="price" />
                                        <field name="partner_id" />
                                        <field name="creation_date" />
                                        <field name="validity" />
                                        <field name="deadline" />
                                        <field name="status" nolabel="1" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="sales_id" />
                                    <field name="buyer_id" />
                                    <field name="phone" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_property" model="ir.actions.act_window">
            <field name="name">Property</field> <!-- Digunakan untuk menampilkan teks dengan nama Property, bsa diganti -->
            <field name="res_model">estate.property</field> <!-- Mengacu pada model yang ada di models/property.py -->
            <field name="view_mode">tree,form</field> <!-- Digunakan untuk mengatur mode tampilan, form untuk menambah dan mengedit, tree untuk menampilkan -->
            <field name="view_id" ref="estate_property_tree_view" />
            <field name="help" type="html">
                <p class="o_view_nocontent_smilling_face">
                    Create a Property to Advertise
                </p>
            </field>
        </record>
    </data>
</odoo>